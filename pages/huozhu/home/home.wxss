/* pages/huozhu/home/home.wxss */
page {
    height: 100%;
    width: 100%;
    position: relative;

}

.container {
    /* background: url(../images/1_1.png) no-repeat; */

    height: 100%;
    width: 100%;

}

.header {
    position: relative;

    display: flex;

    padding: 60rpx 30rpx 120rpx 30rpx;

    background: url(https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/paide/1_14.png) no-repeat;
    background-size: 100% 100%;
}

.header-phonto {
    width: 30%;
}

.header-photo image {
    max-width: 140rpx;
    max-height: 140rpx;
}

.header-text {
    margin-left: 20rpx;
}

.header-name {
    font-weight: bold;
    font-size: 36rpx;
    padding-bottom: 10rpx;
    
    color: #f4f4f4;
}

.header-company view:first-child {
    font-size: 30rpx;
    color: #f5f5f5;
}

.header-company view:last-child {
    font-size: 28rpx;
    color: #FFD0A7;
}

.header-personal {
    position: absolute;
    right: 40rpx;
    top: 60rpx;

    font-size: 24rpx;
    font-weight: bold;
    border-radius: 24rpx;
    padding: 10rpx 20rpx;

    color: #ff8402;
    background: #fff;
}

.todo {
    position: absolute;
    top: 200rpx;
    left: 0rpx;
    right: 0rpx;

    margin: 30rpx;
    border-radius: 10px;
    padding: 20rpx 30rpx;

    box-shadow: 0rpx 0rpx 10rpx 5rpx #ddd;
    background: #fff;
}

.todo-title {
    font-weight: bold;
    font-size: 36rpx;
    padding: 10rpx 0rpx;
}

.todo-con {
    display: flex;
    position: relative;
}

.text-item {
    display: flex;
    line-height: 70rpx;
    color: #FE7F1F;
    font-size: 28rpx;
}



.text-item text {
    display: block;
    width: 245rpx;
    color: #333;
}

.todo-btn {
    position: absolute;
    right: 0;
    top: -20rpx;
}

.btn-item {
    margin: 20rpx 0;
    padding: 20rpx;


    text-align: center;
    font-size: 28rpx;
    border-radius: 40rpx;

    color: #f4f4f4;
    background: linear-gradient(to right,#fcbb01, #f68400);

}

.data {
    position: absolute;
    top: 640rpx;
    left: 0rpx;
    right: 0rpx;

    margin: 30rpx;
    border-radius: 10px;
    padding: 20rpx 30rpx;

    box-shadow: 0rpx 0rpx 10rpx 5rpx #ddd;
    background: #fff;
}

.data-title {
    font-weight: bold;
    font-size: 36rpx;
    padding: 10rpx 0rpx;
}

.item-con {
    display: flex;
    border-bottom: 2rpx #f4f4f4 solid;
    margin: 10rpx 0;
    padding: 10rpx 30rpx;
    font-size: 28rpx;
}

.con-bills {
    width: 50%;
}

.con-bills text {
    color: #FE7F1F;
}

.con-quantity {
    width: 50%;
}