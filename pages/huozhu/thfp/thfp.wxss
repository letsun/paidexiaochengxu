/* pages/huozhu/thfp/thfp.wxss */
page {
    height: 100%;
    width: 100%;
    position: relative;
    
}

.container {
    height: 100%;
    width: 100%;
}

.inp {
    padding-top: 20rpx;
    margin: 0rpx 20rpx;
    font-size: 26rpx;
}

.inp-item {
    display: flex;
    
    border-top:#ddd 2rpx solid;
    border-left:#ddd 1rpx solid;
    border-right:#ddd 1rpx solid;
    /* border-bottom: transparent 1rpx solid; */
}

.inp-item:last-child {
    border-bottom: 2rpx #ddd solid;
}

.item-key {
    width: 180rpx; 
    text-align: center;
    padding: 15rpx 0rpx;

    background: #F4F4F4;
}

.item-value {
    width: 500rpx;
}

.item-value  {
    padding: 15rpx;
}

.upload {
    position: relative;

    display: flex;
    padding: 10px;
}

.upload-book {
    border: 1rpx #f4f4f4 solid;
    height: 130rpx;
    width: 300rpx;
    font-size: 28rpx;
    position: relative;

}

.upload-book image{
    height: 130rpx;
    width: 300rpx;
}

.book-text {
    text-align: center;
    line-height: 130rpx;
}

.upload-mask {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    top: 0;
    background: rgba(0, 0, 0, .6);
    color: #f4f4f4;
}

.upload-previewImage {
    position: absolute;
    left: 60rpx;
    top: 40rpx;
}

.upload-delect {
    position: absolute;
    right: 60rpx;
    top: 40rpx;
}

.add-info {
    position: absolute;
    right: 40rpx;
    top: 85rpx;
       
    font-size: 28rpx;
    padding: 15rpx 20rpx;
    border-radius: 45rpx;

    background: #FF6600;
    color: #f4f4f4;
}


.con {
    margin: 20rpx;
    border: 1rpx #ddd solid;
    padding: 20rpx;
}



.con-item {
    font-size: 26rpx;
    display: flex;
    padding: 10rpx 0rpx;
}

.con-item:first-child .con-value {
    border: 1rpx solid #fff;
}

.con-key {
    width: 130rpx;
}



.con-value {
    position: relative;

    width: 530rpx;

    border: 1rpx solid #ddd;
}

.con-value input {
    padding: 5rpx;
}

.con-close {
    position: absolute;
    right: 50rpx;
}

.footer {
    text-align: center;
    height: 90rpx;
}

.footer-btn {
    background: #FF6600;
    display: inline-block;
    color: #f4f4f4;
    border-radius: 30rpx;
    padding: 10rpx 30rpx;
}

