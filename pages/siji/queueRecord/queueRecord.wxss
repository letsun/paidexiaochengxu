/* pages/siji/queueRecord/queueRecord.wxss */
.tab {
  width: 50%; 
  text-align: center;
  color: #999;
  padding: 25rpx 0;
}
 
.topTabSwiper {
  display: flex;
  flex-direction:row;
  justify-content: space-around;
}
 
.topTabSwiper:after {
  content: "";
  clear: both;
  display: block;
}
 
.tabBorer {
  border-bottom: 2px solid #ff8500;
  color: #333;
  font-weight: bold;
}
 
.swiper {
  width: 100%;
}

.queue-list{
  width: 670rpx;
  color: #999;
  box-shadow: 0 0 10px #e6e6e6;
  margin: 0 auto;
  margin-top: 10px;
  padding: 30rpx 0;
}

.queue-row:after{
  display: block;
  content: "";
  clear: both;
}
.queue-row-wrap{
  float: left;
  width: 44%;
  line-height: 48rpx;
  font-size: 26rpx;
  padding-left: 35rpx;
}

.queue-row-content{
  font-size: 28rpx;
  color: #333;
}
