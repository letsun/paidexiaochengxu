} */

.footer-item {
  width: 50%;
  text-align: center;
  
  
}

.footer-item:first-child {
  background: #fff;
  color: #333;
}

.footer-item:last-child {
  background: #F59A23;
  color: #f4f4f4;
}

.tfooter {
  height: 90rpx;
}

.upload-img  {
  position: relative;
}

.upload-img image {
  width: 280rpx;
  height: 180rpx;
}

.upload-mask {
    position: absolute;
    left: 0;
    right: 0rpx;
    bottom: 0;
    top: 0;
    background: rgba(0, 0, 0, .6);
    color: #f4f4f4;

    font-size: 28rpx;
}

.upload-previewImage {
    position: absolute;
    left: 60rpx;
    top: 0rpx;
}

.upload-delect {
    position: absolute;
    right: 60rpx;
    top: 0rpx;
}


.mask{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .6);  
}

.mask-con {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  
  border-radius: 10rpx;
  overflow: hidden;
  background: #fff;
}

.mask-title {
  text-align: center;
  line-height: 100rpx;
  font-size: 28rpx;
  border-bottom: 1rpx #ddd solid;
}

.mask-text {
  padding:30rpx;
  border-bottom: 1rpx #ddd solid;
}

.mask-text text {
  font-size: 28rpx;
  padding: 10rpx 30rpx;
  display: block;
}
.mask-text textarea{
  border: 1rpx #ddd solid;
  width: 260px;

  padding: 30rpx;
}

.mask-footer {
  display: flex;
  font-size: 28rpx;
}

.mask-footer-item {
  width: 50%;
}

.item-btn {
 
  text-align: center;
  line-height: 80rpx;
}

.mask-footer-item:first-child .item-btn {

  color: #aaa;

}

.mask-footer-item:last-child .item-btn {

  color: #f4f4f4f4;
  background: #f68100;
}
