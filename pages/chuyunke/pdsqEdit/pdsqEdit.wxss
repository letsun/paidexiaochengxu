/* pages/chuyunke/pdsqEdit/pdsqEdit.wxss */
.container {
  height: 100%;
  width: 100%;
  position: relative;
  font-size: 28rpx;
}

.header {
  padding: 30rpx 30rpx 0 30rpx;
  background: #F2F2F2;
}

.header text {
  color: #999;
}

.header-item {
  position: relative;

  display: flex;
  line-height: 60rpx;
  font-size: 26rpx;
}

.header-right {
  position: absolute;
  right: 50rpx;
} 



.card {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}

.card-item {
  width: 50%;
}

.card-phone image {
  width: 280rpx;
  height: 150rpx;

}

.con {

}

.con-title {
  background: #F2F2F2; 
  padding: 0rpx 30rpx;
  line-height: 70rpx;
  color: #999;
}

.con-item {
  padding: 10rpx 20rpx;
  display: flex;
}



.con-left {
  width: 50%;
  display: flex;
}



.con-right {
  width: 50%;
  display: flex;
}

.con-item:last-child .con-left{
  display: block;
}
.con-item:last-child .con-right{
  display: block;
}

.con-key {
  color: #999;
}

.con-item image {
  height: 180rpx;
  width: 280rpx;
}




.upload {
}

.upload-title {
  background: #F2F2F2; 
  padding: 0rpx 30rpx;
  line-height: 70rpx;
  color: #999;
}

.upload-img {
  font-size: 60rpx;
  border: 1rpx #999 dotted;
  height: 180rpx;
  width: 280rpx;
  text-align: center;
  line-height: 180rpx;
  color: #999;

  margin: 20rpx;
}


.upload-img image {
  height: 180rpx;
  width: 280rpx;
}

.footer {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  right: 0;
  line-height: 90rpx;

  display: flex;

  box-shadow: 0rpx 1rpx 10rpx 5rpx #f4f4f4;
}

