/* pages/menwei/scancode/scancode.wxss */

page {
  height: 100%;
  width: 100%;
}

.container {
  /* background: url(../images/1_1.png) no-repeat; */
  background:url(https://qdwzvue-1254182596.cos.ap-guangzhou.myqcloud.com/qdwzAct/paide/1_1.png) no-repeat 100% 100%;
  height: 100%;
  width: 100%;
  position: relative;
}


.logout {
  height: 80rpx;
  line-height: 80rpx;
  margin: 0rpx 60rpx;
  text-align: right;
}

.content {
  margin: 0rpx 60rpx 0rpx 60rpx;
  background: #fff;
  border-radius: 15rpx;
  overflow: hidden;
}

.content-header {
  padding-top: 80rpx;
  display: flex;
  font-weight: bold;
  font-size: 34rpx;
  padding: 50rpx 75rpx 0rpx 75rpx;
}

.content-hedear-left {
  width: 55%;
  text-align: left;
}

.content-header-right {
  width: 45%;
  text-align: right;
  color: #fd7d00;
  padding: 8rpx 0rpx;
  font-size: 24rpx;
}

.content-qrcode {
  height: 480rpx;
  width: 480rpx;
  margin-top: 30rpx;
  padding: 0rpx 75rpx 0rpx 75rpx;
}

.content-qrcode canvas {
  height: 480rpx!important;
  width: 480rpx!important;
}

.content-qrcode-img {
  max-height: 480rpx;
  max-width: 480rpx;
  border: 1rpx solid red;
}

.content-refresh {
  display: flex;
  font-size: 27rpx;
  padding-top: 30rpx;
  padding-bottom: 40rpx;
  justify-content: center;
}

.content-refresh-image image {
  width: 27rpx;
  height: 22rpx;
  margin: auto;
  padding-right: 10rpx;
}

.content-refresh-text {
  color: #666;
}

.content-refresh-text text {
  color: #fd7d00;
}

.content-bottom {
  display: flex;
  background: #fece00;
}

.content-bottom-item {

}

.yxz {
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fece00;
  color: #fff;

}

.wxz {
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  font-size: 30rpx;
  background: #f7f7f7;
  color: #333;

}

.situation {
  margin: 50rpx 60rpx 0rpx 60rpx;
  background: #fff;
  color: #fd7d00;
  line-height: 85rpx;
  border-radius: 40rpx;
  text-align: center;
}

.record {
  margin: 30rpx 60rpx 60rpx 60rpx;
  background: #fff;
  color: #fd7d00;
  line-height: 85rpx;
  border-radius: 40rpx;
  text-align: center;
}
